---
export interface Props {
    name: string;
    duration: string;
    role: string;
    description: string;
    className?: string;
}

const { name, duration, role, description, className } = Astro.props;
---

<section class={className}>
    <h3 class="text-lg font-semibold leading-6">
        {name}
        <small class="text-gray-500">
            {duration}
        </small>
    </h3>
    <em>{role}</em>
    <p class="mt-2 whitespace-pre-line">{description}</p>
</section>
