---
import clsx from 'clsx'

export interface Props {
    classNames?: string;
    onclick?: string;
    variant?: 'light' | 'dark'
}

const { onclick, classNames, variant = 'dark' } = Astro.props;
---

<button
    onclick={onclick}
    class={clsx(
        "font-medium rounded-full px-4 py-0.5",
        {
            "bg-zinc-900 text-slate-50": variant === 'dark',
            "bg-white text-zinc-900": variant === 'light',
        },
        classNames,
    )}
>
    <slot />
</button>
